@page "/"
@namespace BlazorCart.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <link href="_content/Blazored.Toast/blazored-toast.css" rel="stylesheet" />
    <link href="~/css/blazored-toast.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <script>
        // on load finished
        $(window).load(function () {
            // select element and fade it out
            $('.overlay').fadeOut();
        });
    </script>

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    @* expand icons*@
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>


    <link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" id="bootstrap-css">
    <script src='//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js'></script>
    <script>
        onBlazorReady() {
            $("#resizable").resizable();
        });
    </script>




    <script src="SaveFile.js"></script>
    <script src="_content/Microsoft.AspNetCore.ProtectedBrowserStorage/protectedBrowserStorage.js"></script>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blazor Cart</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />

</head>


